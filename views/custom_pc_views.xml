<odoo>
    <data>

        <!-- Custom PC Configuration Menu Item -->
        <menuitem id="menu_custom_pc_configuration"
                  name="Custom PC Configuration"
                  parent="base.menu_sales"
                  action="action_custom_pc_configurations"
                  sequence="5"/>

        <!-- Custom PC Configuration Action -->
        <record id="action_custom_pc_configurations" model="ir.actions.act_window">
            <field name="name">Custom PC Configurations</field>
            <field name="res_model">custom.pc</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure and manage custom PC builds.
                </p>
            </field>
        </record>

        <!-- Custom PC Configuration Tree View -->
        <record id="view_custom_pc_tree" model="ir.ui.view">
            <field name="name">custom.pc.tree</field>
            <field name="model">custom.pc</field>
            <field name="arch" type="xml">
                <tree string="Custom PC Configurations">
                    <field name="name"/>
                    <field name="price_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Custom PC Configuration Form View -->
        <record id="view_custom_pc_form" model="ir.ui.view">
            <field name="name">custom.pc.form</field>
            <field name="model">custom.pc</field>
            <field name="arch" type="xml">
                <form string="Custom PC Configuration">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="budget_limit"/>
                        </group>
                        <notebook>
                            <page string="Components">
                                <field name="component_ids" widget="many2many_tags"/>
                            </page>
                            <page string="Validation">
                                <field name="validation_status"/>
                                <field name="validation_message" nolabel="1"/>
                            </page>
                            <page string="Compatibility">
                                <field name="compatibility_issues" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Custom PC Configuration Search View -->
        <record id="view_custom_pc_search" model="ir.ui.view">
            <field name="name">custom.pc.search</field>
            <field name="model">custom.pc</field>
            <field name="arch" type="xml">
                <search string="Search Custom PC Configurations">
                    <field name="name"/>
                    <field name="user_id"/>
                    <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="filter_confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <group string="Group By">
                        <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                        <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Custom PC Configuration Kanban View -->
        <record id="view_custom_pc_kanban" model="ir.ui.view">
            <field name="name">custom.pc.kanban</field>
            <field name="model">custom.pc</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <field name="name"/>
                                <div class="o_kanban_record_bottom">
                                    <field name="price_total" widget="monetary"/>
                                    <field name="state" widget="statusbar"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Custom PC Configuration Calendar View -->
        <record id="view_custom_pc_calendar" model="ir.ui.view">
            <field name="name">custom.pc.calendar</field>
            <field name="model">custom.pc</field>
            <field name="arch" type="xml">
                <calendar string="Custom PC Configurations">
                    <field name="name"/>
                    <field name="date_order"/>
                </calendar>
            </field>
        </record>

        <!-- Custom PC Configuration Pivot View -->
        <record id="view_custom_pc_pivot" model="ir.ui.view">
            <field name="name">custom.pc.pivot</field>
            <field name="model">custom.pc</field>
            <field name="arch" type="xml">
                <pivot string="Custom PC Configurations">
                    <field name="name" type="row"/>
                    <field name="price_total" type="col"/>
                </pivot>
            </field>
        </record>

        <!-- Custom PC Configuration Graph View -->
        <record id="view_custom_pc_graph" model="ir.ui.view">
            <field name="name">custom.pc.graph</field>
            <field name="model">custom.pc</field>
            <field name="arch" type="xml">
                <graph string="Custom PC Configurations">
                    <field name="name"/>
                    <field name="price_total" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Custom PC Configuration Report -->
        <record id="action_report_custom_pc_configuration" model="ir.actions.report">
            <field name="name">Custom PC Configuration Report</field>
            <field name="model">custom.pc</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_pc_reports.custom_pc_configuration_report</field>
            <field name="report_file">custom_pc_reports.custom_pc_configuration_report</field>
            <field name="binding_model_id" ref="model_custom_pc"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>