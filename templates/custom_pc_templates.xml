<odoo>
    <data>

        <!-- Custom PC Configuration Template -->
        <template id="custom_pc_template" name="Custom PC Configuration">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container">
                        <h1>Customize Your PC</h1>
                        <div class="row">
                            <div class="col-md-8">
                                <form id="pc_builder_form" action="/custom_pc/submit" method="post">
                                    <div class="form-group">
                                        <label for="pc-component-selector">Select Components:</label>
                                        <select id="pc-component-selector" class="form-control" t-onchange="configureComponent(event)">
                                            <t t-foreach="request.env['product.template'].search([('categ_id', '=', CUSTOM_PC_CATEGORY_ID)])" t-as="component">
                                                <option t-att-value="component.id"><t t-esc="component.name"/></option>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="pc-build-budget">Budget:</label>
                                        <input type="number" id="pc-build-budget" class="form-control" placeholder="Enter your budget" t-onchange="manageBudget(event)"/>
                                    </div>
                                    <div id="pc-build-validation" class="alert alert-warning" role="alert" style="display: none;"></div>
                                    <div id="pc-compatibility-check" class="alert alert-info" role="alert" style="display: none;"></div>
                                    <button type="submit" class="btn btn-primary">Submit Build</button>
                                </form>
                            </div>
                            <div class="col-md-4">
                                <div id="pc-order-summary">
                                    <h3>Order Summary</h3>
                                    <!-- Order summary will be dynamically updated -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- PC Builder Wizard Template -->
        <template id="pc_builder_wizard_template" name="PC Builder Wizard">
            <t t-call="web.html_container">
                <t t-set="head">
                    <link rel="stylesheet" type="text/css" href="/static/src/css/custom_pc_styles.css"/>
                    <script type="text/javascript" src="/static/src/js/custom_pc_configurator.js"></script>
                </t>
                <div class="oe_pc_builder_wizard">
                    <h2>PC Builder Wizard</h2>
                    <div class="oe_wizard_body">
                        <!-- Wizard content will be dynamically updated -->
                    </div>
                </div>
            </t>
        </template>

        <!-- Custom PC Report Template -->
        <template id="custom_pc_report_template" name="Custom PC Report">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>Custom PC Report</h2>
                    <!-- Report content will be generated here -->
                </div>
            </t>
        </template>

    </data>
</odoo>